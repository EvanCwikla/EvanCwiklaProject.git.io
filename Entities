import pygame
from settings import TILE, BLUE, RED

class Player:
    def __init__(self, x, y):
        self.x, self.y = x, y

    def handle_input(self, keys):
        if keys[pygame.K_UP]: self.y -= 1
        if keys[pygame.K_DOWN]: self.y += 1
        if keys[pygame.K_LEFT]: self.x -= 1
        if keys[pygame.K_RIGHT]: self.x += 1

    def draw(self, screen):
        rect = pygame.Rect(self.x * TILE, self.y * TILE, TILE, TILE)
        pygame.draw.rect(screen, BLUE, rect)

class Enemy:
    def __init__(self, path):
        self.path = path
        self.index = 0
        self.x, self.y = path[0]

    def update(self):
        self.index = (self.index + 1) % len(self.path)
        self.x, self.y = self.path[self.index]

    def draw(self, screen):
        rect = pygame.Rect(self.x * TILE, self.y * TILE, TILE, TILE)
        pygame.draw.rect(screen, RED, rect)
